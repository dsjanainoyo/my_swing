<%= render 'layouts/admin_header'%>

<main>
    <div class="row">
      <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
      <h2 class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12 bg-light text-center">ミュージシャン一覧</h2>
      <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
    </div>

    <table class="table justify-content-center mx-auto">
        <thead class="bg-light">
            <tr>
                <th class="text-center">名前</th>
                <th class="text-center">投稿イベント</th>
                <th class="text-center">ジャンル</th>
                <th class="text-center">退会ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @musicians.each do |musician|%>
              <tr>
                  <td class="text-center"><%=link_to musician.name,admin_musician_path(musician.id)%></td>
                  <td class="text-center"><%=musician.events.count%></td>
                  <td class="text-center">
                      <%musician.genre_items.each do |genre_item|%>
                        <span class="text-center m-1" style="display: block;"><%=genre_item.name%></span>
                      <%end%>
                  </td>
                  <td class="text-center"><%=musician.is_deleted_i18n%></td>
              </tr>
            <%end%>
        </tbody>
    </table>
    <div class="text-center">
        <%= paginate @musicians%>
    </div>
    

</main>

<%= render 'layouts/admin_header'%>

<main>
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
          <h2 class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12 bg-light text-center">ジャンル</h2>
        <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
    </div>
    
  
    
    <div class="text-center">
        <%=alert%>
        <%=form_with model: @genre_item, url: admin_genre_items_path, local: true do |f|%>
          <%=f.text_field :name, placeholder: "ジャンル名"%>
          <%=f.submit '追加',class:"btn btn-success"%>
        <%end%>
    </div>
    
    <div class="mx-auto">
        <table class="table text-center">
            <thead class="bg-light">
                <th class="text-center">ジャンル名</th>
                <th></th>
            </thead>
            <tbody>
                <% @genre_items.each do |genre_item|%>
                  <tr style='border: none;'>
                      <td class="text-center"><%=genre_item.name%></td>
                      <td class="text-center"><%=link_to "編集",edit_admin_genre_path(genre_item.id),class:"btn btn-success"%></td>
                  </tr>
                <%end%>
            </tbody>
        </table>
        <%= paginate @genre_items%>
    </div>
</main>

        

    
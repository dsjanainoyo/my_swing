<%= render 'layouts/admin_header'%>

<main>
  <div class="row">
      <div class="col-4"></div>
      <h2 class="col-4 bg-light text-center">管理者ログイン</h2>
      <div class="col-4"></div>
  </div>
  
  <p class="notice text-center"><%= notice %></p>
  <p class="alert text-center"><%= alert %></p>
  
  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group p-2">
        <%= f.label :email ,'メールアドレス'%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'xxx@xxx' %>
      </div>
      
      <div class="form-group p-2">
        <%= f.label :password,'パスワード' %>
        <%= f.password_field :password, autocomplete: "current-password",placeholder: '6文字以上' %>
      </div>
      
      <div class="actions">
        <%= f.submit "Log in",class:"btn btn-primary" %>
      </div>
    <%end%>
    
    <%= render "admin/shared/links" %>
    
  </div>
</main>


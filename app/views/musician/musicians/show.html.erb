<%=render 'layouts/musician_header'%>

<main>
    <div class="row">
      <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
        <h2 class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12 bg-light text-center">マイページ</h2>
      <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"><%=link_to "編集",edit_musician_musician_path(current_musician),class:"btn btn-success"%></div>
    </div>
    
    <div class="text-center m-3">
        <%if current_musician.musician_image.attached?%>
          <%= image_tag current_musician.musician_image,size:"200x200"%>
        <%else%>
          <%=image_tag 'no_image',size:"200x200"%>
        <%end%>
    </div>
    
    <div class="mx-auto w-50">
        <table class="table text-center">
            <tbody>
                <tr>
                    <td class="text-center">名前</td>
                    <td class="text-center"><%=current_musician.name%></td>
                </tr>
                <tr>
                    <td class="text-center">説明文</td>
                    <td class="text-center"><%=current_musician.introduction%></td>
                </tr>
                <tr>
                    <td class="text-center">ジャンル</td>
                    <td class="text-center">
                        <% current_musician.genre_items.each do |genre_item|%>
                          <span class="text-center p-1" style="display: block;"><%=genre_item.name%></span>
                        <%end%>
                    </td>
                </tr>
                <tr>
                    <td class="text-center">フォロワー数</td>
                    <td class="text-center"><%=link_to @follower.count,musician_followers_path%></td>
                </tr>
            </tbody>
        </table>

    </div>
</main>

        
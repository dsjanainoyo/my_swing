<%=render 'layouts/musician_header'%>

<h2><%=@event.name%></h2>

<%if @event.event_image.attached?%>
  <%= image_tag @event.event_image,size:"200x200"%>
<%else%>
  <%=image_tag 'no_image',size:"200x200"%>
<%end%>

<%=link_to "編集",edit_musician_event_path(@event.id),class: "btn btn-success"%>

<table class="table">
    <tbody>
        <tr>
            <td>ミュージシャン名</td>
            <td><%=@event.musician.name%></td>
        </tr>
        
        <tr>
            <td>説明文</td>
            <td><%=@event.introduction%></td>
        </tr>
        
        <tr>
            <td>日時</td>
            <td><%=@event.datetime%></td>
        </tr>
        
        <tr>
            <td>場所</td>
            <td><%=@event.place%></td>
        </tr>
        
        <tr>
            <td>予約ステータス</td>
            <td><%=@event.seating_status%></td>
        </tr>
        
        <tr>
            <td>予約数</td>
            <td><%=@event.capacity%></td>
        </tr>
    </tbody>
</table>
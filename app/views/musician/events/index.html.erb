<%= render 'layouts/musician_header'%>

<h2>イベント一覧</h2>

<table class="table">
    <thead class="bg-light">
        <tr>
            <th>イベント名</th>
            <th>日時</th>
            <th>予約数</th>
            <th>予約ステータス</th>
        </tr>
    </thead>
    <tbody>
        <%@events.each do |event|%>
          <tr>
              <td><%=link_to event.name,musician_event_path(event.id)%></td>
              <td><%=event.datetime%></td>
              <td><%=event.reservations.count%>/<%=event.capacity%></td>
              <td><%=event.seating_status%></td>
          </tr>
        <%end%>
    </tbody>
</table>
<%= paginate @events%>
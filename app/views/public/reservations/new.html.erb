<%= render 'layouts/public_header'%>

  <main>
      <div class="row">
        <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
          <h2 class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12 bg-light text-center">予約</h2>
        <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
      </div>
      
      <div class="container">
          <div class="row">
              <div class="col-xs-12 col-sm-6 col-lg-6">
                  <div class="d-flex align-item-center p-5">
                     <% if @event.event_image.attached?%>
                      <%=image_tag @event.event_image,size: '200x200'%>
                     <%else%>
                      <%=image_tag 'no_image',size: '200x200'%>
                     <%end%> 
                  </div>
              </div>
              
              <div class="col-xs-12 col-sm-6 col-lg-6">
                  <div class="mx-auto">
                    <%= form_with model: @reservation, url: public_event_reservations_path(@event.id) do |f|%>
                        <table class="table text-center p-5">
                            <tbody>
                                <tr>
                                    <td>イベント名</td>
                                    <td><%=@event.name%></td>
                                </tr>
                                
                                <tr>
                                    <td>予約ステータス</td>
                                    <td><%=@event.seating_status_i18n%></td>
                                </tr>
                                
                                <tr>
                                  <td><%=f.label :headcount, '人数'%></td>
                                  <td><%= f.select :headcount, *[1..10],{include_blank: '選択してください'}%></td>
                                </tr>
                                
                                <tr>
                                    <%=f.hidden_field :event_id, :value => @event.id%>
                                    <td><%=f.submit '予約する',class:"btn btn-success"%></td>
                                    <td id="alert" class="text-danger"><%=alert%></td>
                                </tr>
                            </tbody>  
                        </table>
                    <%end%>
                          
                  </div>
              </div>
          </div>
      </div>
  </main>
  
                    

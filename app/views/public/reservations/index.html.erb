<%= render 'layouts/public_header'%>

<h2>予約一覧</h2>

<table>
    <thead class="bg-light">
        <tr>
            <th>イベント名</th>
            <th>予約人数</th>
            <th>日時</th>
        </tr>
    </thead>
    
    <tbody>
        <% @reservations.each do |reservation|%>
          <tr>
              <td><%=link_to reservation.event.name,public_event_path(reservation.event.id)%></td>
              <td><%=reservation.headcount%></td>
              <td><%=reservation.event.datetime%></td>
              <td><%=link_to "削除する",public_event_reservation_path(reservation.event_id,reservation.id), method: :delete,class:"btn btn-danger"%></td>
          </tr>
        <%end%>
    </tbody>
</table>
<%= paginate @reservations%>
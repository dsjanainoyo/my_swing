<%= render 'layouts/public_header'%>

<main>
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
          <h2 class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12 bg-light text-center">予約一覧</h2>
        <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
    </div>
    
    <div class="mx-auto">
        <table class="table text-center">
            <thead class="bg-light">
                <tr>
                    <th class="text-center">イベント名</th>
                    <th class="text-center">予約人数</th>
                    <th class="text-center">日時</th>
                    <th></th>
                </tr>
            </thead>
            
            <tbody>
                <% @reservations.each do |reservation|%>
                
                  <tr>
                      <td class="text-center"><%=link_to reservation.event.name,public_event_path(reservation.event.id)%></td>
                      <td class="text-center"><%=reservation.headcount%></td>
                      <td class="text-center"><%=reservation.event.datetime%></td>
                      <td class="text-center"><%=link_to "削除する",public_event_reservation_path(reservation.event_id,reservation.id), method: :delete,class:"btn btn-danger"%></td>
                  </tr>
                <%end%>
            </tbody>
        </table>
        
        <div class="text-center">
            <%= paginate @reservations%>
        </div>
        
    </div>
</main>
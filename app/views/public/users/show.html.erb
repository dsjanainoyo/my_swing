<%=render 'layouts/public_header'%>

<main>
  <div class="row">
    <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
      <h2 class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12 bg-light text-center">マイページ</h2>
    <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"><%=link_to "編集",edit_public_user_path(current_user.id),class:"btn btn-success"%></div>
  </div>
  
  <div class="text-center m-3">
    <% if current_user.user_image.attached?%>
      <%=image_tag current_user.user_image, size: '250x250'%>
    <%else%>
      <%=image_tag 'no_image',size: '250x250'%>
    <%end%>  
  </div>
  
  <div class="mx-auto w-50">
    <table class="table text-center">
        <tbody>
            <tr>
                <td class="text-center">名前</td>
                <td class="text-center"><%=current_user.name%></td>
            </tr>
            
            <tr>
                <td class="text-center">フォロー中のミュージシャン</td>
                <td class="text-center"><%=current_user.relationships.count%></td>
            </tr>
            
            <tr>
                <td class="text-center">いいねしたイベント</td>
                <td class="text-center"><%=current_user.favorites.count%></td>
            </tr>
            
            <tr>
                <td class="text-center">好みのジャンル</td>
                <td class="text-center">
                    <% current_user.genre_items.each do |genre_item|%>
                      <span class="text-center p-2" style="display: block;"><%=genre_item.name%></span>
                    <%end%>
                </td>
            </tr>
        </tbody>
    </table>  
  </div>
</main>

    
<%=render 'layouts/public_header'%>

<h2>マイページ</h2>

<%=link_to "編集",edit_public_user_path(current_user.id),class:"btn btn-success"%>

<% if current_user.user_image.attached?%>
  <%=image_tag current_user.user_image, size: '200x200'%>
<%else%>
  <%=image_tag 'no_image',size: '200x200'%>
<%end%>

<table class="table">
    <tbody>
        <tr>
            <td>名前</td>
            <td><%=current_user.name%></td>
        </tr>
        
        <tr>
            <td>フォロー中のミュージシャン</td>
            <td><%=current_user.relationships.count%></td>
        </tr>
        
        <tr>
            <td>いいねしたイベント</td>
            <td><%=current_user.favorites.count%></td>
        </tr>
        
        <tr>
            <td>好みのジャンル</td>
            <td>
                <% current_user.genre_items.each do |genre_item|%>
                  <%=genre_item.name%>
                <%end%>
            </td>
        </tr>
    </tbody>
</table>
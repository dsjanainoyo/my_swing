<%= render 'layouts/public_header'%>

<h2>フォローしたミュージシャン</h2>

<table class="table">
    <thead class="bg-light">
        <tr>
            <th>名前</th>
            <th>投稿イベント</th>
            <th>ジャンル</th>
        </tr>
    </thead>
    
    <tbody>
        <% @musicians.each do |musician|%>
          <tr>
              <td><%=link_to musician.name,public_musician_path(musician)%></td>
              <td><%=musician.events.count%></td>
              <% musician.genre_items.each do |genre_item|%>
                <td><%=genre_item.name%></td>
              <%end%>
          </tr>
        <%end%>
    </tbody>
</table>

<%= paginate @musicians%>
<%= render 'layouts/public_header'%>

<main>
  
  <div class="row">
    <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
    <h2 class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12 bg-light text-center">ユーザーログイン</h2>
    <div class="col-xl-4 col-lg-4 col-xs-12 col-sm-12 col-md-12"></div>
  </div>
  
  <p class="notice text-center"><%= notice %></p>
  <p class="alert text-center"><%= alert %></p>
  
  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group p-2">
      <div class="field">
        <%= f.label :email,'メールアドレス:' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,palaceholder: 'xxx@xxx'%>
      </div>
    </div>
    
    <div class="form-group p-2">
      <div class="field">
        <%= f.label :password ,'パスワード:'%>
        <%= f.password_field :password, autocomplete: "current-password" ,placeholder: '6文字以上'%>
      </div>
    </div>
    
    <div class="actions">
      <%= f.submit "Log in",class:"btn btn-primary" %>
    </div>
    
    <div class="text-center p-3">
      登録がまだの方は<%=link_to "こちら",new_user_session_path%>
    </div>
    
    <% end %>
  </div>

</main>
